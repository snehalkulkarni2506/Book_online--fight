<p id="notice"><%= notice %></p>
<div class="container" align="center">
<h1>Flights</h1>

<table border="2px",class+"table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Contact</th>
      <th>Fare</th>
      <th>From to</th>
      <th>Timing</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @travels.each do |travel| %>
      <tr>
        <td><%= travel.name %></td>
        <td><%= travel.contact %></td>
        <td><%= travel.fare %></td>
        <td><%= travel.From_To %></td>
        <td><%= travel.timing %></td>
        <td><%= link_to 'Show', travel %></td>
        <td><%= link_to 'Edit', edit_travel_path(travel) %></td>
        <td><%= link_to 'Destroy', travel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

<%= link_to 'New Flight', new_travel_path, class: "btn btn-primary" %>
</div>
